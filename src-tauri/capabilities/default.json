{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "dialog:default",
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-mkdir",
    "fs:allow-write-text-file",
    "fs:allow-create",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "dialog:allow-save",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}